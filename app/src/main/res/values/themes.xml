<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.PandaTask" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/panda_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/panda_green_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/panda_green_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/panda_green_light</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_on_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/dark_on_surface_variant</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- Application theme -->
    <style name="Theme.PandaTask" parent="Base.Theme.PandaTask" />
    
    <!-- Splash screen theme -->
    <style name="Theme.PandaTask.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.PandaTask</item>
    </style>
</resources>